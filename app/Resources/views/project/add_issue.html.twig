{% extends 'default/index.html.twig' %}
{% block title %}
    {{ 'app.titles.project_issue_add' | trans }}
{% endblock %}
{% block page_header %}{{ 'app.titles.project_issue_add'|trans }}{%  endblock %}
{% block page_content %}
    {% for flashMessage in app.session.flashbag.get('flash_project_issue_add') %}
        <div class="alert alert-info" role="alert">{{ flashMessage }}</div>
    {% endfor %}
    <form method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-primary" value="{{ 'app.button.add' | trans }}"/>
        <a class="btn btn-danger" href="{{ path('app_project_view', {id : project.id}) }}">{{ 'app.button.cancel' | trans }}</a>
    </form>
{%  endblock %}

