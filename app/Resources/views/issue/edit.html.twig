{% extends 'default/index.html.twig' %}
{% block title %}
    {{ 'app.titles.issue_edit' | trans({'%issue_code%' : issue.code}) }}
{% endblock %}
{% block page_header %}{{ 'app.titles.issue_edit' | trans({'%issue_code%' : issue.code}) }}{%  endblock %}
{% block page_content %}
    {% for flashMessage in app.session.flashbag.get('flash_issue_edit') %}
        <div class="alert alert-info" role="alert">{{ flashMessage }}</div>
    {% endfor %}
    <form method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-primary" value="{{ 'app.button.edit' | trans }}"/>
        <a class="btn btn-danger" href="{{ path('app_issue_view', {'id': issue.id}) }}">{{ 'app.button.cancel' | trans }}</a>
    </form>
{%  endblock %}