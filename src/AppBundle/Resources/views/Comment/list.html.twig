<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title" id="panel-title">{{ 'app.dashboard_items.comments' | trans }}</h3>
    </div>
    <div class="panel-body">
        <div class="list-group">
            {% if is_granted('add_comment', issue) %}
                <div class="comment-add">
                    <form action="{{ path('app_issue_add_comment', {'id': issue.id }) }}" method="post" {{ form_enctype(form) }}>
                        {{ form_widget(form) }}
                        <input type="submit" class="btn btn-primary" value="{{ 'app.button.comment' | trans }}"/>
                    </form>
                </div>
            {% endif %}
        </div>
        {% for comment in issue.comments %}
            {% include '@App/comment.html.twig' %}
        {% endfor %}
    </div>
</div>

