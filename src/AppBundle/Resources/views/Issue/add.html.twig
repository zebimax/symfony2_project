{% extends '@App/Default/index.html.twig' %}
{% block title %}
    {{ 'app.titles.issue_add' | trans }}
{% endblock %}
{% block page_header %}{{ 'app.titles.issue_create' | trans }}{%  endblock %}
{% block page_content %}
    <form method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input type="submit" class="btn btn-primary" value="{{ 'app.button.add' | trans }}"/>
        <a class="btn btn-danger" href="{{ path('app_issue_list') }}">{{ 'app.button.cancel' | trans }}</a>
    </form>
{%  endblock %}
{% block javascripts %}
    {{ parent() }}
{% javascripts '@AppBundle/Resources/public/js/onProjectSelect.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}
